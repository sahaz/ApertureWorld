<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CameraServlet</servlet-name>
        <servlet-class>CameraServlet.CameraServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductDetailServlet</servlet-name>
        <servlet-class>CameraServlet.ProductDetailServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddCameraServlet</servlet-name>
        <servlet-class>CameraServlet.AddCameraServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DropCameraServlet</servlet-name>
        <servlet-class>CameraServlet.DropCameraServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidateCameraServlet</servlet-name>
        <servlet-class>CameraServlet.ValidateCameraServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CameraServlet</servlet-name>
        <url-pattern>/CameraServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductDetailServlet</servlet-name>
        <url-pattern>/ProductDetailServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCameraServlet</servlet-name>
        <url-pattern>/AddCameraServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DropCameraServlet</servlet-name>
        <url-pattern>/DropCameraServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidateCameraServlet</servlet-name>
        <url-pattern>/ValidateCameraServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
           30
        </session-timeout>
    </session-config>
</web-app>
